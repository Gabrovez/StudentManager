<Window x:Class="StudentManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManager"
        mc:Ignorable="d"
        Title="SQLite Demo" Height="350" Width="400" Background="#FF98F3F9" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Text="Список студентов" FontSize="16" FontWeight="Bold"/>
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10" Grid.Row="0">
            <TextBox x:Name="InputName" Width="200" Margin="0 0 10 0" FontWeight="Bold"/>
            <Button Content="Добавить" Width="150" Click="Add_click" Background="#FFABFF86"
                    FontWeight="Bold" Height="20" />
        </StackPanel>
        <Button Content="Удалить выбранное" Width="150"  Click="Remove_selected_click" 
                Grid.Row="1" Background="#FFF56F6F"  FontWeight="Bold" Height="20" Margin="205 0 0 0" />
        <DataGrid x:Name="DataGridPeople" Grid.Row="2" Background="#FFBCC8C8"/>
    </Grid>
</Window>
